[bandit]
# Configuration for Bandit security linter
# Suppress false positives for Docker containerized application

# Skip files that are auto-generated or test files
exclude_dirs = ["*/migrations", "*/tests", "*/venv", "*/node_modules"]

# Skip specific tests that are false positives in our containerized environment
skips = [
    "B104",  # hardcoded_bind_all_interfaces - Expected for Docker containers (0.0.0.0)
    "B608"   # hardcoded_sql_expressions - False positive: using safe table names from whitelist
]

# Test IDs to skip
tests = []
