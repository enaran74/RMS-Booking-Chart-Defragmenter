[bandit]
# Bandit configuration (INI format)
# Notes:
# - B104 (hardcoded_bind_all_interfaces): We bind to 0.0.0.0 inside Docker intentionally.
# - B608 (hardcoded_sql_expressions): We only interpolate whitelisted table names; parameters are used for values.

# Comma-separated directory globs to exclude
exclude_dirs = tests,migrations,venv,node_modules,backup,output,web_app/app/static

# Comma-separated list of test IDs to skip globally
skips = B104,B608
