# Bandit configuration file
# This file configures bandit to ignore false positive security warnings

# Skip specific tests that are false positives for our use case
skips: ['B104', 'B105']

# Exclude specific directories or files
exclude_dirs: ['tests', '__pycache__', '.git']

# Set confidence and severity thresholds
# Only report issues with high confidence and medium/high severity
confidence: ['HIGH']
severity: ['HIGH', 'MEDIUM']
